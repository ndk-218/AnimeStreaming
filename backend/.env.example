# =================================================================
# ANIME STREAMING PLATFORM - ENVIRONMENT VARIABLES
# =================================================================

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# ===== DATABASE =====
MONGODB_URI=mongodb://localhost:27017/anime_streaming
# Production example:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/anime_streaming

# ===== REDIS (for queue system) =====
REDIS_URL=redis://localhost:6379
# Production example:
# REDIS_URL=redis://username:password@host:port

# ===== SECURITY =====
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ===== FILE UPLOAD =====
MAX_FILE_SIZE=5368709120
# 5GB in bytes (5 * 1024 * 1024 * 1024)

ALLOWED_VIDEO_FORMATS=mp4,mkv,avi,mov,wmv
ALLOWED_SUBTITLE_FORMATS=srt,vtt,ass

# ===== VIDEO PROCESSING =====
# FFmpeg settings
FFMPEG_THREADS=4
HLS_SEGMENT_DURATION=10
HLS_LIST_SIZE=0

# Video qualities to generate
VIDEO_QUALITIES=480p,1080p

# ===== PATHS =====
UPLOAD_PATH=uploads
TEMP_PATH=temp
LOGS_PATH=logs

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds

RATE_LIMIT_MAX_REQUESTS=1000

# ===== LOGGING =====
LOG_LEVEL=info
LOG_MAX_FILES=7d
LOG_MAX_SIZE=20m

# ===== EXTERNAL APIS (Optional) =====
# MyAnimeList API (for metadata)
MAL_CLIENT_ID=your_mal_client_id
MAL_CLIENT_SECRET=your_mal_client_secret

# AniList API (for metadata)
ANILIST_CLIENT_ID=your_anilist_client_id
ANILIST_CLIENT_SECRET=your_anilist_client_secret

# ===== EMAIL (for notifications) =====
EMAIL_FROM=noreply@animestreaming.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ===== CDN (Optional for production) =====
CDN_URL=https://cdn.yoursite.com
S3_BUCKET=anime-streaming-videos
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# ===== MONITORING (Optional) =====
SENTRY_DSN=your_sentry_dsn